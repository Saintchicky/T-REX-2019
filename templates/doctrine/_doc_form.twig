{{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        <h4 class="ui dividing header">{{title}}</h4>
        <span class="error">{{ form_errors(form.prenom) }}</span>
        <div class="three fields">
           <div class="field">
               {{ form_label(form.civilite) }}
               {{ form_widget(form.civilite) }}
               	<span class="field error">{{ form_errors(form.civilite) }}</span>
           </div>
            <div class="field">
               {{ form_label(form.prenom,'Pr√©nom') }}
               {{ form_widget(form.prenom) }}
               	<span class="field error">{{ form_errors(form.prenom) }}</span>
           </div>
           <div class="field">
               {{ form_label(form.nom) }}
               {{ form_widget(form.nom) }}
               	<span class="field error">{{ form_errors(form.nom) }}</span>
           </div>
        </div>
        <div class="field">
            {{ form_label(form.dateNaissance,'Votre date de Naissance') }}
            <div class="ui calendar" id="french_calendar">
                <div class="ui input left icon">
                    <i class="calendar icon"></i>
                    {{ form_widget(form.dateNaissance) }}
                    <span class="field error">{{ form_errors(form.dateNaissance) }}</span> 
              </div>
            </div>
        </div>
        <div class="field">
            {{ form_label(form.message) }}
            {{ form_widget(form.message) }} 
            <span class="field error">{{ form_errors(form.message) }}</span>
        </div>
        <div class="field">
            <input type="submit" value="Valider" class="ui button primary">
        </div>
{{ form_end(form) }}