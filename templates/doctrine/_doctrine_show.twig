{% extends 'base.html.twig' %}

{% block title %}DÃ©mo Doctrine!{% endblock %}

{% block body %}
    <div class="ui text container">
        <h1 class="ui header">Doctrine Show + supprimer</h1>
        <div class="ui hidden divider"></div>
        <p>
           Doctrine est un Orm (Object Relational Mapping) qui permet de manipuler des enregistrements sous
           forme d'objets.
        </p>
        {# read and display just one flash message type #}
        {% for message in app.flashes('notice') %}
            <div class="ui positive message">
                <div class="header">
                   Super !!!
                </div>
                <p>{{message}}</p>
            </div>
             <div class="ui hidden divider"></div>
        {% endfor %}
        <p>Quelques exemples :</p>
    {{ form_start(form, {'action': path('vaisseau_form'), 'method': 'POST','attr': {'class': 'ui form'}}) }}
        <h4 class="ui dividing header">Formulaire</h4>
        <div class="two fields">
           <div class="field">
               {{ form_label(form.prenom) }}
               {{ form_widget(form.prenom) }}
           </div>
           <div class="field">
               {{ form_label(form.nom) }}
               {{ form_widget(form.nom) }}
           </div>
        </div>
        <div class="field">
            {{ form_label(form.message) }}
            {{ form_widget(form.message) }} 
        </div>
        <div class="field">
            <input type="submit" name="" value="Valider" class="ui button primary">
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
