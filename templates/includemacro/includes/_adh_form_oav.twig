            {% set items = ['Madame', 'Monsieur']%}
            {{ forms.civilite('Civilité', 'civilite', value, items) }}
        </div>
        <div class="field">
            {% set value = null %}
            {{ forms.personne('Nom', 'lastname', 'Votre Nom', value) }}
        </div>
    </div>
    <div class="equal width fields">
        <div class="field">
            {% set value = null %}
            {{ forms.personne('Prénom', 'firstname', 'Votre Prénom', value) }}
        </div>
        <div class="field">
            {% set value = null %}
            {{ forms.pays('Pays', 'pays', 'Choisir un pays') }}
        </div>
    </div>
    <div class="equal width fields">
        <div class="field">
            {% set value = null %}
            {{ forms.textearea('Autres Infos', 'text', 'Il faut remplir', value) }}
        </div>
    </div>
